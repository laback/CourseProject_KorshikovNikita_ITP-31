@model IEnumerable<RailroadTransport.Models.Stop>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Распродажа книг</h3>
    <table>
        <tr class="header">
            <td><p>Номер остановки</p></td>
            <td><p>Название остановки</p></td>
            <td></td>
        </tr>
        @foreach (var s in Model)
        {
            <tr>
                <td><p>@s.StopId.</p></td>
                <td><p>@s.NameOfStop</p></td>
            </tr>
        }
    </table>
</div>